const ChatSimulation = () => {
  const [messages, setMessages] = useState([
    { role: 'user', text: "Analyse ce bilan financier confidentiel." }
  ]);
  useEffect(() => {
    const sequence = [
      { delay: 1000, role: 'system', text: "üîí Analyse Local First en cours..." },
      { delay: 2500, role: 'ai', text: "Analyse termin√©e. Aucune donn√©e n'a quitt√© votre serveur. Le bilan montre une hausse de 15% de l'EBITDA." },
    ];
    let timeouts = [];
    sequence.forEach(({ delay, role, text }) => {
      const timeout = setTimeout(() => {
        setMessages(prev => [...prev, { role, text }]);
      }, delay);
      timeouts.push(timeout);
    });
    return () => timeouts.forEach(clearTimeout);
  }, []);
  return (
    <div className="bg-slate-900 border border-slate-800 rounded-xl p-4 font-mono text-sm shadow-2xl max-w-md mx-auto transform -rotate-1 hover:rotate-0 transition-transform duration-500 hover:shadow-cyan-500/10 hover:border-cyan-500/30">
      <div className="flex items-center gap-2 mb-4 border-b border-slate-800 pb-2">
        <div className="w-3 h-3 rounded-full bg-red-500"></div>
        <div className="w-3 h-3 rounded-full bg-yellow-500"></div>
        <div className="w-3 h-3 rounded-full bg-green-500"></div>
        <span className="text-slate-500 text-xs ml-2">secure-chat-v2.0 (Localhost)</span>
      </div>
      <div className="space-y-3 h-48 overflow-hidden">
        {messages.map((msg, i) => (
          <div key={i} className={`flex ${msg.role === 'user' ? 'justify-end' : 'justify-start'} animate-fade-in`}>
            <div className={`p-2 rounded-lg max-w-[85%] ${
              msg.role === 'user' ? 'bg-slate-800 text-slate-200' : 
              msg.role === 'system' ? 'text-yellow-500 text-xs italic' :
              'bg-cyan-900/20 text-cyan-200 border border-cyan-900/50'
            }`}>
              {msg.text}
            </div>
          </div>
        ))}
      </div>
    </div>
  );
};

/* --- CALCULATEUR ROI --- */
const RoiCalculator = () => {
  const [employees, setEmployees] = useState(5);
  const [minutes, setMinutes] = useState(45);
  const [rate, setRate] = useState(45);

  const hoursLostPerDay = minutes / 60;
  const dailyLoss = employees * hoursLostPerDay * rate;
  const annualLoss = dailyLoss * 220; // 220 jours ouvr√©s
  const mvpPrice = 3500;
  const paybackDays = dailyLoss > 0 ? Math.ceil(mvpPrice / dailyLoss) : 0;

  return (
    <div className="max-w-5xl mx-auto bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden shadow-2xl relative">
      <div className="absolute top-0 right-0 p-3 opacity-10">
        <Calculator className="w-32 h-32 text-cyan-500" />
      </div>
      
      <div className="p-8 md:p-12">
        <div className="text-center mb-10">
          <h2 className="text-3xl font-bold text-white mb-2">Le Co√ªt de l'Inaction</h2>
          <p className="text-slate-400">Combien vous co√ªte l'absence d'IA chaque ann√©e ?</p>
        </div>

        <div className="grid lg:grid-cols-2 gap-12 items-center">
          {/* Sliders */}
          <div className="bg-slate-950/50 p-6 rounded-xl border border-slate-800">
            <RangeSlider 
              label="Nombre de collaborateurs" 
              value={employees} 
              min={1} max={50} step={1} 
              unit="pers"
              onChange={setEmployees} 
            />
            <RangeSlider 
              label="Temps perdu / jour (t√¢ches r√©p√©titives)" 
              value={minutes} 
              min={10} max={180} step={5} 
              unit="min"
              onChange={setMinutes} 
            />
            <RangeSlider 
              label="Co√ªt horaire moyen (charg√©)" 
              value={rate} 
              min={25} max={150} step={5} 
              unit="‚Ç¨/h"
              onChange={setRate} 
            />
          </div>

          {/* Result */}
          <div className="text-center lg:text-left">
            <p className="text-slate-500 font-medium mb-2 uppercase tracking-wide text-xs">Perte annuelle estim√©e</p>
            <div className="text-5xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-orange-500 mb-6">
               <AnimatedCounter value={annualLoss} currency={true} />
            </div>
            
            <div className="bg-cyan-900/20 border border-cyan-500/30 rounded-lg p-4 inline-block text-left">
              <div className="flex items-center gap-3 mb-1">
                <TrendingUp className="text-cyan-400 w-5 h-5" />
                <span className="text-white font-bold">Retour sur investissement</span>
              </div>
              <p className="text-slate-300 text-sm">
                Avec un MVP √† 3 500‚Ç¨, votre solution SmartUnityIA est rentabilis√©e en seulement <span className="text-cyan-400 font-bold text-lg">{paybackDays} jours</span>.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

